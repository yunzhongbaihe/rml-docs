*
  margin: 0
  padding: 0
  
a
  color: #0088EE

.theme-default-content:not(.custom)
  padding: 2rem 1rem
  max-width 100%

.sidebar
  width: 200px

.page
  padding-left: 200px

.navbar
  padding 0.75rem 1rem
  height: 60px

.home
  padding: 60px 1rem 50px
  max-width 100%

a.header-anchor
  display none

body
  font-family: 'Fira Code Light', 'Courier New', Courier, monospace;

.sidebar-heading
  padding-top: 0
  padding-bottom: 0
  line-height: 30px
  padding-left: 10px
  padding-right: 10px

.sidebar-heading.clickable.active,
a.sidebar-link.active
  color: #0088EE
  border-left-color: #0088EE

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active
  color: #0088EE
  border-bottom-color: #0088EE

.home .footer
  position: fixed
  bottom: 0
  left: 0
  padding: 0
  width: 100%
  line-height: 49px
  background-color: #fff;

.sidebar > .sidebar-links > li:not(:first-child)
  margin-top: 0 !important

.sidebar > .sidebar-links
  padding: 10px 0 !important

.sidebar-group li {
  line-height: 30px
}

.sidebar-group a.sidebar-link
  display: block
  padding-top: 0
  padding-bottom: 0
  line-height: 30px
  padding-left: 2em
  padding-right: 0.5em

.theme-default-content > h1:first-child
  margin-bottom: 0 !important
  line-height: 40px

.page-nav
  display: none
  padding: 0
  max-width: inherit
  line-height: 30px

.page-nav .inner
  padding: 0
  margin: 0

.navbar .links
  left: 1rem
  padding-left: 0